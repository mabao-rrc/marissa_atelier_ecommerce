<!-- Page header with centered text -->
<div class="mt-5 mb-4" style="text-align: center;">
  <h1 style="font-weight: 700;">Manage Products</h1>

  <!-- Button to add a new product -->
  <%= link_to "Add New Product", new_admin_product_path,
      class: "btn btn-atelier mt-3",
      style: "display: inline-block; font-weight: 500;" %>
</div>

<!-- Product grid container -->
<div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 1.5rem; padding: 1rem;">
  <!-- Render each product using the admin product card partial -->
  <%= render partial: 'product_card', collection: @products, as: :product %>
</div>
