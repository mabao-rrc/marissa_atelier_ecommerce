<%= form_with(model: [:admin, @product], local: true) do |form| %>
  <% if @product.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@product.errors.count, "error") %> prevented this product from being saved:</h4>
      <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", style: "border-radius: 0;" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", rows: 4, style: "border-radius: 0;" %>
  </div>

  <div class="mb-3">
    <%= form.label :price, class: "form-label" %>
    <%= form.number_field :price, class: "form-control", step: 0.01, style: "border-radius: 0;" %>
  </div>

  <div class="mb-3">
    <%= form.label :stock_quantity, class: "form-label" %>
    <%= form.number_field :stock_quantity, class: "form-control", style: "border-radius: 0;" %>
  </div>

  <div class="mb-3">
    <%= form.label :image_url, class: "form-label" %>
    <%= form.text_field :image_url, class: "form-control", style: "border-radius: 0;" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-atelier" %>
  </div>
<% end %>
