<%= form_with(model: [:admin, @product], local: true) do |f| %>
  <% if @product.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@product.errors.count, "error") %> prevented this product from being saved:</h4>
      <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control", style: "border-radius: 0;" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: "form-control", rows: 4, style: "border-radius: 0;" %>
  </div>

  <div class="mb-3">
    <%= f.label :price, class: "form-label" %>
    <%= f.number_field :price, class: "form-control", step: 0.01, style: "border-radius: 0;" %>
  </div>

  <div class="mb-3">
    <%= f.label :stock_quantity, class: "form-label" %>
    <%= f.number_field :stock_quantity, class: "form-control", style: "border-radius: 0;" %>
  </div>

  <div class="mb-3">
    <%= f.label :image_url, class: "form-label" %>
    <%= f.text_field :image_url, class: "form-control", style: "border-radius: 0;" %>
  </div>

  <div class="form-actions d-flex gap-3 mt-4">
    <%= f.submit 'Create Product', class: 'btn btn-atelier' %>
    <%= link_to 'Back', admin_products_path, class: 'btn btn-atelier cancel' %>
  </div>
<% end %>