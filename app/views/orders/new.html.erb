<%# Displays invoice summary and collects province        %>
<%# ------------------------------------------------------ %>

<h1 class="mb-4" style="font-family: 'Cormorant Garamond', serif; color: #896629;">Checkout</h1>

<% if @cart_items.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Subtotal</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |item| %>
        <tr>
          <td><%= item[:product].name %></td>
          <td><%= item[:quantity] %></td>
          <td><%= number_to_currency(item[:product].price) %></td>
          <td><%= number_to_currency(item[:product].price * item[:quantity]) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= form_with url: checkout_path, method: :post, local: true do %>
    <div class="mb-3">
      <%= label_tag :province, "Select Your Province", class: "form-label" %>
      <%= select_tag :province, options_for_select(
          ['MB', 'ON', 'QC', 'BC', 'AB', 'SK', 'NS', 'NB', 'NL', 'PE', 'NT', 'NU', 'YT']
        ), prompt: "Choose...", class: "form-select", required: true %>
    </div>

    <%= submit_tag "Place Order", class: "btn btn-primary" %>
  <% end %>

<% else %>
  <p>Your cart is empty.</p>
  <%= link_to "Browse Products", root_path, class: "btn btn-primary" %>
<% end %>
