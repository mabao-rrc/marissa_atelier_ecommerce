<h1>Your Cart</h1>

<% if @cart_items.any? %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Total</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |item| %>
        <tr>
          <td><%= item[:product].name %></td>
          <td><%= item[:quantity] %></td>
          <td><%= number_to_currency(item[:product].price) %></td>
          <td><%= number_to_currency(item[:product].price * item[:quantity]) %></td>
          <td>
            <%= button_to "Remove", remove_item_cart_path(product_id: item[:product].id), method: :post %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "Checkout", checkout_path, class: "btn btn-primary" %>
<% else %>
  <p>Your cart is empty.</p>
<% end %>
