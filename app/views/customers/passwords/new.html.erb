<!-- 
  app/views/customers/passwords/new.html.erb
  This page allows customers to request a password reset link.
  Styled with Marissa Atelier branding using Bootstrap.
-->

<div class="container mt-5" style="max-width: 600px;">
  <!-- Heading -->
  <h1 class="text-center mb-4" style="font-family: 'Cormorant Garamond', serif; color: #896629;">
    Forgot Your Password?
  </h1>

  <p class="text-center mb-4" style="color: #404040;">
    Enter your email address and weâ€™ll send you a link to reset your password.
  </p>

  <!-- Forgot password form -->
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

    <!-- Email field -->
    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <!-- Submit button -->
    <div class="d-grid">
      <%= f.submit "Send Reset Instructions", class: "btn btn-primary", style: "background-color: #896629; border: none;" %>
    </div>

  <% end %>

  <!-- Additional links -->
  <div class="text-center mt-3">
    <%= render "customers/shared/links" %>
  </div>
</div>
